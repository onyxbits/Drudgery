<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#80000000"
	android:orientation="horizontal"
	android:padding="@dimen/widget_margin" >

	<LinearLayout
		android:id="@+id/timecontainer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/marginspace"
		android:gravity="center"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/img_freetime"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/marginspace"
			android:src="@drawable/ic_home" />

		<TextView
			android:id="@+id/timeleft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
			android:id="@+id/moneyearned"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="@dimen/dividerwidth"
		android:layout_height="fill_parent"
		android:layout_marginBottom="@dimen/marginspace"
		android:layout_marginTop="@dimen/marginspace"
		android:background="@android:color/background_light"
		android:orientation="vertical" >
	</LinearLayout>

	<LinearLayout
		android:id="@+id/gamecontainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/marginspace"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/lbl_quest_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
			android:id="@+id/lbl_quest_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

</LinearLayout>